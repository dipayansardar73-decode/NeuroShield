# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_RESOURCE_GROUP=neuroshield-rg
AZURE_STORAGE_ACCOUNT_NAME=neuroshieldst
AZURE_COSMOS_CONNECTION_STRING=your_cosmos_connection_string
AZURE_EVENTHUB_CONNECTION_STRING=your_eventhub_connection_string
AZURE_ML_WORKSPACE_NAME=neuroshield-ml

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/neuroshield
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# JWT/Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Configuration
MODEL_ENSEMBLE_THRESHOLD=0.5
ANOMALY_DETECTION_THRESHOLD=0.7

# Feature Store
FEATURE_STORE_UPDATE_INTERVAL=3600

# Monitoring
APP_INSIGHTS_KEY=your_app_insights_instrumentation_key
